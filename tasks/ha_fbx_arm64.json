{
    "builders": [
        {
            "name": "hafbx",
            "type": "arm-image",
            "chroot_mounts": [
                [
                    "proc",
                    "proc",
                    "/proc"
                ],
                [
                    "sysfs",
                    "sysfs",
                    "/sys"
                ],
                [
                    "bind",
                    "/dev",
                    "/dev"
                ],
                [
                    "devpts",
                    "devpts",
                    "/dev/pts"
                ],
                [
                    "binfmt_misc",
                    "binfmt_misc",
                    "/proc/sys/fs/binfmt_misc"
                ]
            ],
            "image_type": "raspberrypi",
            "image_mounts": [
                "/",
                "/boot/efi"
            ],
            "iso_url": "/home/runner/work/ha_fbx/arm64.img",
            "iso_checksum_type": "none",
            "mount_path": "/tmp/mnt",
            "qemu_binary": "qemu-aarch64-static"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sed -i 's/^\\([^#]\\)/#\\1/g' /etc/ld.so.preload",
                "dpkg-architecture",
                "apt-get -y update",
                "apt-get install -y ansible"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "chmod +x /usr/bin/*"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "ha_fbx.yml",
            "command": "ANSIBLE_FORCE_COLOR=1 PYTHONUNBUFFERED=1 ansible-playbook"
        },
        {
            "type": "shell",
            "inline": [
                "sed -i 's/^#\\(.+\\)/\\1/g' /etc/ld.so.preload"
            ]
        }
    ]
}