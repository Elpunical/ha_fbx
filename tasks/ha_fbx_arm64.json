{
    "builders": [
        {
            "name": "hafbx",
            "type": "arm-image",
            "image_type": "raspberrypi",
            "image_mounts": ["/boot/efi", "/"],
            "iso_url": "/home/runner/work/ha_fbx/debian-arm64.img",
            "iso_checksum_type": "none",
            "mount_path": "/mnt",
            "qemu_binary": "qemu-aarch64-static"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sed -i 's/^\\([^#]\\)/#\\1/g' /etc/ld.so.preload",
                "dpkg-architecture",
                "apt-get -y update",
                "apt-get install -y ansible"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "chmod +x /usr/bin/*"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "ha_fbx.yml",
            "command": "ANSIBLE_FORCE_COLOR=1 PYTHONUNBUFFERED=1 ansible-playbook"
        },
        {
            "type": "shell",
            "inline": [
                "sed -i 's/^#\\(.+\\)/\\1/g' /etc/ld.so.preload"
            ]
        }
    ]
}